// NOTE: use JSON5 to be able to use comments
{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rangeStrategy": "pin",
    "packageRules": [
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "automerge": true,
            // Force Renovate to not create a PR (but merge its branches directly)
            "automergeType": "branch"
        },
        {
            "description": "Causes the bot to create a PR (and thus, an email notification), whenever there is a new major Renovate version",
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false,
            "prCreation": "immediate"
        }
    ]
}
